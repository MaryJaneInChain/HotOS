;Hot-OS
;TAB=4

;有关BOOT_INFO
	CYLS EQU 0x0ff0
	LEDS EQU 0x0ff1
	VMODE EQU 0x0ff2		;颜色的位数
	SCRNX EQU 0x0ff4		;分辨率x值
	SCRNY EQU 0x0ff6		;分辨率y值
	VRAM EQU 0x0ff8			;图像缓冲区开始地址


	ORG 0xc200

	MOV AL,0x13
	MOV AH,0x00
	INT 0x10
	MOV BYTE [VMODE],8
	MOV WORD [SCRNX],320
	MOV WORD [SCRNY],200
	MOV DWORD [VRAM],0x000a0000

	MOV AH,0x02
	INT 0x16
	MOV [LEDS],AL

fin:
	HLT
	JMP fin